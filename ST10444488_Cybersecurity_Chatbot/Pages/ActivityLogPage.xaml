<Window x:Class="ST10444488_Cybersecurity_Chatbot.Pages.ActivityLogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ST10444488_Cybersecurity_Chatbot.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Activity Log" Height="400" Width="600" Background="#e6f2ff">
    <Border Background="#006080" CornerRadius="10" Padding="15" Margin="10">
        <StackPanel>
            <TextBlock Text="Recent Activity Log" FontSize="20" FontWeight="Bold" Foreground="White" Margin="5"/>
            <ListBox x:Name="LogList" Background="White" BorderBrush="#004080" Foreground="#004080" FontSize="14" Margin="5" Height="280" SelectionMode="Single"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Mark as Complete" Click="MarkComplete_Click" Margin="5" Background="#66B2FF" Foreground="White"/>
                <Button Content="Delete Task" Click="DeleteTask_Click" Margin="5" Background="#CC3300" Foreground="White"/>
            </StackPanel>
            
            <Button Content="Close" Click="Close_Click" HorizontalAlignment="Right" Width="80" Background="#66B2FF" Foreground="White" Margin="5"/>
        </StackPanel>
    </Border>
</Window>
